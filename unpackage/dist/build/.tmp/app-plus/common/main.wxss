/*每个页面公共css */
uni-page-body,
page {
  background-color: #f8f8f8;
  font-size: 25rpx;
  width: 100%;
}
.page_block {
  width: 750rpx;
}
.page_block .page_top {
  margin-top: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.page_block .page_top .registered_account {
  width: 550rpx;
  height: 70rpx;
  line-height: 50rpx;
  margin-top: 50rpx;
  border-bottom: 1rpx solid #bfbfbf;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.page_block .page_top .registered_account .registered_account_send {
  height: 100rpx;
  float: right;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #3a3a3a;
}
.page_block .page_top .registered_account .placeholder_style {
  font-size: 28rpx;
  font-weight: 400;
  color: #888888;
}
.page_block .page_top .registered_account .registered_account_send.beginClass {
  color: #888888;
}
.page_block .page_top .registered_account_agreement {
  width: 350rpx;
  margin-top: 60rpx;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
}
.page_block .page_top .block_btn {
  width: 504rpx;
  height: 82rpx;
  line-height: 82rpx;
  margin-top: 80rpx;
  font-size: 30rpx;
  color: #ffffff;
  text-align: center;
  background: #3f8af0;
  border-radius: 40rpx;
}
.page_block .page_top .block_tips {
  width: 580rpx;
  margin-top: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #7d7d7d;
}

