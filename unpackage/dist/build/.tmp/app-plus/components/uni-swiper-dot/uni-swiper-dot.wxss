.container {
  position: relative;
  margin-top: 70rpx;
  margin-bottom: 10rpx;
}
.container .swiper {
  width: 710rpx;
  height: 345rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 16rpx;
  position: relative;
}
.container .swiper .swiper-item {
  width: 710rpx;
  height: 344rpx;
  border-radius: 16rpx;
}
.container .dots {
  position: absolute;
  bottom: 70rpx;
  left: 15%;
  transform: translate(-50%, 0);
  -webkit-transform: translate(-50%, 0);
  z-index: 99;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.container .dots .dot {
  width: 60rpx;
  height: 4rpx;
  -webkit-transition: all 0.6s;
  transition: all 0.6s;
  background: rgba(0, 0, 0, 0.3);
  margin-right: 10rpx;
}
.container .dots .active {
  width: 60rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.8);
}

